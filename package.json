{
  "name": "mangadex-offline",
  "version": "1.0.0",
  "description": "electron app to download and read mangadex mangas offline",
  "main": "src/electronStarter.js",
  "scripts": {
    "start": "electron .",
    "build-dev": "electron-builder . -c.compression=store",
    "clean-build": "rm -rf dist; electron-builder .",
    "ship": "git push && build --win -p always"
  },
  "author": "mahhov1",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "env-paths": "^2.2.0",
    "xx-element": "^3.0.1"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "asar": false,
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "files": [
      "resources",
      "src"
    ],
    "icon": "./resources/fa-book-open.png",
    "linux": {
      "target": "AppImage"
    }
  }
}
